<h1> List of Tasks </h1>

<table>
<tr>
<th>Task</th>
</tr>

<% @tasks.each do |task| %>
<tr>
<td><%=task.to_do%></td>
<td><%=link_to'Show', task_path(task)%></td>
<td><%=link_to'Done!', task_path(task),
	method: :delete,
	data: {confirm:'Are you sure?'}%>
</td>
</tr>
<%end%>

</table>

<h2><%=link_to'New task',new_task_path%></h2>